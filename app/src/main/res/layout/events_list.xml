<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/view_selection"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/img_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event_white_24dp"/>
        <TextView
            android:fontFamily="@font/aldrich"
            android:textColor="@android:color/white"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_date"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_alarm_white_24dp"/>
        <TextView
            android:fontFamily="@font/aldrich"
            android:textColor="@android:color/white"
            android:id="@+id/time"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"/>

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/delius_unicase"
            android:text="Event_Name"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
        <TextView
            android:textColor="@android:color/white"
            android:fontFamily="@font/aldrich"
            android:text="Venue:"
            android:id="@+id/img_venue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/venue"
            android:layout_alignBottom="@id/img_venue"
            android:fontFamily="@font/aldrich"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_venue"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>