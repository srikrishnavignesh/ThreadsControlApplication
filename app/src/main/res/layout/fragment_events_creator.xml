<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".events_list.EventsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        <ImageView
            android:background="@android:color/holo_blue_light"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/event_logo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorAccent"
            android:font="@font/aldrich"
            android:fontFamily="@font/aldrich"
            android:gravity="center_horizontal"
            android:text="Event_Create"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:id="@+id/event_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/aldrich"
                android:text="Event_Name:" />

            <EditText
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_name_label"
                android:hint="event_name" />
            <TextView
                android:layout_below="@id/event_name"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:id="@+id/event_desc_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/aldrich"
                android:text="Event_Description:" />
            <EditText
                android:id="@+id/event_desc"
                android:background="@drawable/editext"
                android:scrollbars="vertical"
                android:hint="event description"
                android:gravity="start"
                android:maxLines="10"
                android:layout_marginTop="10dp"
                android:layout_below="@id/event_desc_label"
                android:minLines="3"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="100dp"/>
            <TextView
                android:layout_below="@id/event_desc"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:id="@+id/event_venue_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/aldrich"
                android:text="Event_Venue:" />

            <EditText
                android:hint="venue"
                android:layout_below="@id/event_venue_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/venue"/>
            <Button
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:fontFamily="@font/aldrich"
                android:layout_marginTop="10dp"
                android:text="date"
                android:layout_below="@id/venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"/>
            <Button
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:fontFamily="@font/aldrich"
                android:elevation="10dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/date"
                android:text="start_time"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/start_time"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_alignBottom="@id/start_time"
                android:text="-"
                android:id="@+id/hypen_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/start_time"/>
            <Button
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:fontFamily="@font/aldrich"
                android:id="@+id/end_time"
                android:elevation="10dp"
                android:textSize="20sp"
                android:layout_alignBottom="@id/hypen_symbol"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/hypen_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="end_time"/>
            <TextView
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:fontFamily="@font/aldrich"
                android:id="@+id/level_label"
                android:text="No_Of_Levels"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_time"/>
            <NumberPicker
                android:id="@+id/levels"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/level_label"/>
            <TextView
                android:layout_marginTop="10dp"
                android:text="Contact_Info"
                android:fontFamily="@font/aldrich"
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:layout_below="@id/levels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact_info_label"/>
            <EditText
                android:id="@+id/contact"
                android:background="@drawable/editext"
                android:scrollbars="vertical"
                android:hint="contact info"
                android:gravity="start"
                android:maxLines="10"
                android:layout_marginTop="10dp"
                android:layout_below="@id/contact_info_label"
                android:minLines="2"
                android:inputType="textMultiLine"
                android:layout_width="match_parent"
                android:layout_height="75dp"/>
            <Button
                android:textColor="@android:color/white"
                android:background="@color/colorAccent"
                android:fontFamily="@font/aldrich"
                android:layout_marginTop="10dp"
                android:layout_below="@id/contact"
                android:id="@+id/create_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="create_event"/>
            <ProgressBar
                android:visibility="invisible"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>